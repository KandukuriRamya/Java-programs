class Main {
    public static void main(String[] args) {
        int colors[] = {1,1,1,6,1,1,1};
        int n = colors.length;
        int ans = 0;
        for(int i=0;i<n-1;i++){
            for(int j=i+1;j<n;j++){
                if(colors[i]!=colors[j]){
                    int diff = j-i;
                    ans = Math.max(ans,diff);
                
            }
            }
        }
        System.out.print(ans);
    }
}
